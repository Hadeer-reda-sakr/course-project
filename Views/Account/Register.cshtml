@model Web.ViewModel.RegisterViewModel
@{
    ViewData["Title"] = "Create Account";
    Layout = "~/Views/Shared/register.cshtml";
}


<section class="form-02-main">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="_lk_de">
                    <div class="form-03-main needs-validation">
                        <div class="logo">
                            <img src="~/img/user.png">
                        </div>

                        <div class="form-group was-validated">
                            <label for="FristName" class="form-label">FristName</label>
                            <input for="FristName" type="text" name="FristName" class="form-control _ge_de_ol" id="FristName" placeholder="Enter FristName" required="" aria-required="true">
                        </div>
                        <div class="form-group was-validated">
                            <label for="LastName" class="form-label">LastName</label>
                            <input for="LastName" type="text" name="LastName" class="form-control _ge_de_ol" id="LastName" placeholder="Enter LastName" required="" aria-required="true">
                        </div>
                        <div class="form-group was-validated">
                            <label for="Email" class="form-label">Email</label>
                            <input for="Email" type="email" name="email" class="form-control _ge_de_ol" id="Email" placeholder="Enter Email" required="" aria-required="true">
                        </div>

                        <div class="form-group was-validated">
                            <label for="password" class="form-label">password</label>
                            <input for="password" type="password" name="password" class="form-control _ge_de_ol" id="password" placeholder="Enter Password" required="" aria-required="true">
                        </div>

                        <div class="form-group was-validated">
                            <label for="ConfirmPassword" class="form-label">ConfirmPassword</label>
                            <input for="ConfirmPassword" type="password" name="ConfirmPassword" class="form-control _ge_de_ol" id="ConfirmPassword" placeholder="ConfirmPassword" required="" aria-required="true">
                            
                        </div>

                        <div class="form-group was-validated col-12">
                            <label for="CourseId" class="form-label text-muted p-2"></label>
                           <div class="wrap-input100 validate-input  m-b-20 ">
                               <select class="custom-select-input100 " asp-for="CourseId" asp-items="@(new SelectList(Model.Courses,"Id","Title"))" >

                                   <option selected disabled> Select Course</option>
                               </select>
                               <span class="focus-input100 "></span>
                           </div>

                        </div>

                        <div class="form-group needs-validation ">
                            <div class="_btn_04">
                                <button type="submit" asp-area="Identity" class="btn-primary"> Register </button>
                            </div>
                        </div>

                    
                    </div>
                </div>
            </div>
        </div>
    </div>
   
</section>
 
